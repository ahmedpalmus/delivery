<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetails"
    android:orientation="vertical"
    android:background="@drawable/box_2"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_margin="2dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:textSize="23sp"
            android:text="The Order Details"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textColor="#C8215A"
            android:fontFamily="@font/timesbi"/>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Customer"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/or_customer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Order Time"
                    android:textColor="#000"
                    android:textStyle="bold"

                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/or_date"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#393838"
                    android:textSize="18dp"
                    android:text="30/06/2023 16:44"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Total Price"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:textStyle="bold"

                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/or_total"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/or_status"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#046E09"
                    android:textSize="18dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/prof_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Location"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="18dp"
                android:background="@drawable/gradient_light"
                android:drawableLeft="@drawable/map"
                android:textAlignment="center"
                android:textAllCaps="false"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F3F2F2"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="#C8215A"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="Added Items"/>

            </LinearLayout>

            <TableLayout
                android:id="@+id/items_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >


                <TableRow
                    android:layout_width="match_parent"
                    android:background="#FAECF1"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:padding="20dp"
                        android:textSize="18dp"
                        android:text="Orange Juice"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:padding="20dp"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:text="5 SA"/>
                </TableRow>

            </TableLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/prof_start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start Preparing"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:background="@drawable/box_4"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/prof_ready"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Order is Ready"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:background="@drawable/box_6"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/prof_startd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start Delivery"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:background="@drawable/box_4"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/prof_delivered"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delivered"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:background="@drawable/box_6"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/prof_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel Order"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:background="@drawable/box_7"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>


