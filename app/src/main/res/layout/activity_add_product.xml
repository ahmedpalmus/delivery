<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProduct"
    android:orientation="vertical"
    android:background="@drawable/box_2"

    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="23sp"
        android:text="Wecome Back"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:textColor="#C8215A"
        android:drawableRight="@drawable/staff"
        android:fontFamily="@font/timesbi"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="New Product details"
                android:textColor="@color/black"
                android:fontFamily="@font/times"
                android:background="#F6F5F5"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/l1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    />
                <EditText
                    android:id="@+id/po_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/l2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Price"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    />
                <EditText
                    android:id="@+id/po_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:inputType="number"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="SR"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/po_image"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:text="Select Image"
                    android:textAllCaps="false"
                    android:background="@drawable/box_7"
                    />
            </LinearLayout>
            <ImageView
                android:padding="10dp"
                android:id="@+id/add_pimage"
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:src="@drawable/menu_item"
                android:scaleType="fitCenter"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/l3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/po_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/box_3"
                android:hint="Enter the details"
                android:lines="3"
                android:padding="10dp"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <Button
                    android:id="@+id/po_save"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:padding="10dp"
                    android:background="@drawable/box_6"
                    android:layout_marginHorizontal="10dp"/>
                <Button
                    android:visibility="gone"
                    android:id="@+id/po_del"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/delete"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:background="@drawable/box_1"
                    android:layout_marginHorizontal="10dp"/>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>